<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="controller.ReturnBooksController" alignment="CENTER" spacing="20" style="-fx-background-color: #110e1b; -fx-padding: 20;">
    <Label text="Return Books" style="-fx-font-size: 36px; -fx-font-weight: bold;" styleClass="text"/>

    <GridPane hgap="10" vgap="10" alignment="CENTER">
      <Label text="Student ID:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
      <TextField fx:id="idField" GridPane.rowIndex="0" GridPane.columnIndex="1" />
    </GridPane>
    
    <TableView fx:id="borrowedBooksTable" prefHeight="300">
      <columns>
        <TableColumn text="ISBN" fx:id="isbnColumn" />
        <TableColumn text="Title" fx:id="titleColumn" />
        <TableColumn text="Return" fx:id="returnColumn" />
      </columns>
    </TableView>

    <Label fx:id="errorLabel" text="Cannot proceed â€” one or more fields are empty." visible="false" managed="false" />

    <HBox alignment="CENTER" spacing="20">
      <Button text="Back" fx:id="backButton" onAction="#handleBackButton" userData="/loans.fxml" styleClass="button" />
      <Button text="Search Student" fx:id="searchButton" onAction="#handleSearchButton" styleClass="button" />
    </HBox>
</VBox>
