<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="controller.CheckOutBooksController" alignment="CENTER" spacing="20" style="-fx-background-color: #110e1b; -fx-padding: 20;">
    <Label text="Check out Books" style="-fx-font-size: 36px; -fx-font-weight: bold;" styleClass="text"/>

    <GridPane hgap="10" vgap="10" alignment="CENTER">
      <Label text="Student ID:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
      <TextField fx:id="idField" GridPane.rowIndex="0" GridPane.columnIndex="1" />


      <Label text="Book ISBN:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
      <TextField fx:id="isbnField" GridPane.rowIndex="1" GridPane.columnIndex="1" />

      <Hyperlink text="Choose from list" GridPane.rowIndex="2" GridPane.columnIndex="1" styleClass="small-link" onAction="#handleOpenBookList" />

    </GridPane>

    <Label fx:id="errorLabel" text="Cannot proceed â€” one or more fields are empty." visible="false" managed="false" />

    <HBox alignment="CENTER" spacing="20">
      <Button text="Cancel" fx:id="cancelButton" onAction="#handleCancelButton" userData="/loans.fxml" styleClass="button" />
      <Button text="Borrow" fx:id="borrowButton" onAction="#handleBorrowBookClick" styleClass="button" />
    </HBox>
</VBox>
