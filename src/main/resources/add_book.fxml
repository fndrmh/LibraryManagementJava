<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="controller.AddBookController" alignment="CENTER" spacing="20" style="-fx-background-color: #110e1b; -fx-padding: 20;">
    <Label text="Add Book" style="-fx-font-size: 36px; -fx-font-weight: bold;" styleClass="text"/>

    <GridPane hgap="10" vgap="10" alignment="CENTER">
      <Label text="Title:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
      <TextField fx:id="titleField" GridPane.rowIndex="0" GridPane.columnIndex="1" />

      <Label text="Author:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
      <TextField fx:id="authorField" GridPane.rowIndex="1" GridPane.columnIndex="1" />

      <Label text="ISBN:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
      <TextField fx:id="isbnField" GridPane.rowIndex="2" GridPane.columnIndex="1" />


      <Label text="Publication Year:" GridPane.rowIndex="3" GridPane.columnIndex="0" />
      <ComboBox fx:id="yearComboBox" GridPane.rowIndex="3" GridPane.columnIndex="1" />

      <Label text="Category:" GridPane.rowIndex="4" GridPane.columnIndex="0" />
      <ComboBox fx:id="categoryComboBox" GridPane.rowIndex="4" GridPane.columnIndex="1" />
    </GridPane>

    <Label fx:id="errorLabel" text="Cannot proceed â€” one or more fields are empty." visible="false" managed="false" />

    <HBox alignment="CENTER" spacing="20">
      <Button text="Cancel" fx:id="cancelButton" onAction="#handleCancelButton" userData="/manage_books.fxml" styleClass="button" />
      <Button text="Add" fx:id="addButton" onAction="#handleAddBookClick" styleClass="button" />
    </HBox>
</VBox>
