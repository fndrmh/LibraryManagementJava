<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="controller.AddStudentController" alignment="CENTER" spacing="20" style="-fx-background-color: #110e1b; -fx-padding: 20;">
    <Label text="Add Student" style="-fx-font-size: 36px; -fx-font-weight: bold;" styleClass="text"/>

    <fx:define>
        <ToggleGroup fx:id="studentTypeGroup"/>
    </fx:define>

    <HBox alignment="CENTER" spacing="20">
      <RadioButton fx:id="undergradRadio" text="Undergraduate" toggleGroup="$studentTypeGroup" selected="true" />
      <RadioButton fx:id="gradRadio" text="Graduate" toggleGroup="$studentTypeGroup"/>
    </HBox>

    <GridPane hgap="10" vgap="10" alignment="CENTER">
      <Label text="Student ID:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
      <TextField fx:id="studentIDField" GridPane.rowIndex="0" GridPane.columnIndex="1" />

      <Label text="First Name:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
      <TextField fx:id="firstNameField" GridPane.rowIndex="1" GridPane.columnIndex="1" />

      <Label text="Last Name:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
      <TextField fx:id="lastNameField" GridPane.rowIndex="2" GridPane.columnIndex="1" />

      <Label text="Major: " GridPane.rowIndex="3" GridPane.columnIndex="0" />
      <TextField fx:id="majorField" GridPane.rowIndex="3" GridPane.columnIndex="1" />

    </GridPane>

    <GridPane fx:id="gradContainer" hgap="10" vgap="10" visible="false" alignment="CENTER" managed="false">
      <Label text="Supervisor: " GridPane.rowIndex="0" GridPane.columnIndex="0" />
      <TextField fx:id="supervisorField" GridPane.rowIndex="0" GridPane.columnIndex="1" />

      <Label text="Thesis Title: " GridPane.rowIndex="1" GridPane.columnIndex="0" />
      <TextField fx:id="thesisTitleField" GridPane.rowIndex="1" GridPane.columnIndex="1" />
    </GridPane>

    <GridPane fx:id="undergradContainer" hgap="10" visible="true" alignment="CENTER" managed="true">
      <Label text="Enrollment Year:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
      <ComboBox fx:id="yearComboBox" GridPane.rowIndex="0" GridPane.columnIndex="1" />
    </GridPane>

    <Label fx:id="errorLabel" text="Cannot proceed â€” one or more fields are empty." visible="false" managed="false" />

    <HBox alignment="CENTER" spacing="20">
      <Button text="Cancel" fx:id="cancelButton" onAction="#handleCancelButton" userData="/manage_users.fxml" styleClass="button" />
      <Button text="Add" fx:id="addButton" onAction="#handleAddStudentClick" styleClass="button" />
    </HBox>
</VBox>
